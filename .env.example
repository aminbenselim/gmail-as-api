# From Google Cloud OAuth client (Desktop app or Web app)
GOOGLE_CLIENT_ID=YOUR_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_CLIENT_SECRET

# For Desktop client use: http://localhost
# For Web client use your exact redirect URI
GOOGLE_REDIRECT_URI=http://localhost

# Where the API listens (inside the container)
PORT=3000

# JSON payload size limit (attachments are base64-encoded)
BODY_LIMIT=25mb

# Shared secret to protect /send from random internet traffic
API_KEY=change-me-long-random

# Required: default From (use your Gmail address or alias)
FROM_EMAIL=you@gmail.com

# Allow request body to override "from" (true/false)
ALLOW_FROM_OVERRIDE=false

# Optional: path to the OAuth tokens file (for Docker Compose use /data/tokens.json)
TOKENS_PATH=tokens.json
